{
  "name": "wordplay",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=24.2.0"
  },
  "scripts": {
    "build": "vite build",
    "cy:open": "cypress open --e2e",
    "cy:run": "cypress run --e2e",
    "dev": "vite",
    "format": "prettier --cache --write src/ cypress/ *.html *.ts *.json *.md",
    "lint": "eslint . --cache --fix --ignore-pattern .gitignore",
    "preview": "vite preview",
    "run": "run-s build preview",
    "spell": "cspell --cache --quiet \"src/**/*.{txt,md,html,js,ts,vue,json,yml,py}\"",
    "spell:store": "cspell --cache --quiet --words-only --unique \"src/**/*.{txt,md,html,js,ts,vue,json,yml,py}\" > cspell-unknown-words.txt",
    "test": "vitest --watch=false",
    "test:cov": "vitest --watch=false --coverage",
    "test:unit": "vitest --watch=true",
    "type-check": "vue-tsc --build",
    "check": "run-p format lint type-check spell test"
  },
  "dependencies": {
    "@flashcards/shared": "workspace:*",
    "@quasar/extras": "^1.17.0",
    "quasar": "^2.18.5",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@quasar/vite-plugin": "^1.10.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^4.0.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "cspell": "^9.2.2",
    "cypress": "^15.5.0",
    "eslint": "^9.38.0",
    "eslint-plugin-cypress": "^5.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.1",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "typescript": "^5.9.3",
    "unplugin-vue-router": "^0.16.0",
    "vite": "^6.4.1",
    "vite-plugin-pwa": "^0.21.2",
    "vitest": "^4.0.4",
    "vue-tsc": "^2.2.12"
  }
}
