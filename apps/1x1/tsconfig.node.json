{
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "cypress.config.ts",
    "../../packages/shared/src/**/*.ts",
    "../../packages/shared/src/**/*.vue",
    "src/config/constants.ts",
    "../../vite.config.base.ts",
    "../../vitest.config.base.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "types": ["node"],
    "paths": {
      "@flashcards/shared": ["../../packages/shared/src/index.ts"]
    }
  }
}
