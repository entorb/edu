{
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "cypress.config.ts",
    "../../cypress.config.base.ts",
    "../../packages/shared/src/**/*.ts",
    "../../packages/shared/src/**/*.vue",
    "../../vite.config.base.ts",
    "../../vitest.config.base.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "@flashcards/shared": ["../../packages/shared/src/index.ts"],
      "@flashcards/shared/components": ["../../packages/shared/src/components/index.ts"]
    }
  }
}
