{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["cypress", "node"],
    "isolatedModules": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["./e2e/**/*", "./support/**/*"],
  "exclude": ["./support/component.*"]
}
